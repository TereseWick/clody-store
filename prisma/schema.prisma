generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"   //Bytt til "postgresql" og URL når det byttes til Superbase/Neon
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  slug        String         @unique
  description String?
  priceNok    Int            // store in øre
  images      ProductImage[]
  stock       Int            @default(0)
  active      Boolean        @default(true)
  productTags ProductTag[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  alt       String?
  order     Int     @default(0)
  product   Product @relation(fields: [productId], references: [id])
  productId String

}

model Order {
  id           String      @id @default(cuid())
  email        String
  totalNok     Int
  currency     String      @default("NOK")
  status       String      @default("pending")
  items        OrderItem[]
  stripeId     String?     @unique
  shippingName String?
  shippingAddr String?
  note         String?
  createdAt    DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  productId String
  name      String
  priceNok  Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  productsTags ProductTag[] 
}

model ProductTag {
  product Product @relation(fields: [productId], references: [id])
  productId String
  tag       Tag    @relation(fields: [tagId], references: [id])
  tagId     String
  @@id([productId, tagId])
}

